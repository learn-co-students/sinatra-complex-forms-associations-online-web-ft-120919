<h1>Update Pet</h1>

<form class="" action="/pets/<%= @pet.id %>" method="post">

  <input id="hidden" type="hidden" name="_method" value="patch">

  Edit Name:
  <input type="text" name="pet[name]" value="<% @pet.name %>" id="pet_name">
  <br>

  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.pets.include?(@pet) %> ><%= owner.name %></input><br>
  <% end %>

  New Owner:
  <input type="text" name="owner[name]" value="" id="owner_name">
  <br>
  <input type="submit" name="submit" value="Update Pet">

</form>
