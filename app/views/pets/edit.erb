<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
<form method="post" action="/pets/<%=@pet.id %>">
  <input id="hidden" type="hidden" name="_method" value="patch">

  <div>
    <label for="pname">Edit the Pet's Name : </label>
    <input type="text" id="pname" name="pet_name" value="<%= @pet.name %>">
  </div>

  <h3>Existing Owners</h3>
  <% @owners.each do |o| %>
    <input type="radio" name="owner_id" id="<%= o.id %>" value="<%= o.id %>" <%='checked' if @pet.owner==o %>><%= o.name %></input><br>

  <% end %>
  <br>

  <h3>New Owner</h3>
  <label for="ownerName">Owner Name: </label>
  <br>
  <input type="text" name="owner_name" id="ownerName"></input>
  <br><br>


  <input type="submit" value="Update Pet">
</form>