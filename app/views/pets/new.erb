<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
<br>
<label for="pet_name">Name: </label><input type="text" id="pet_name" name="pet[name]"></input>
<br>

<h3>Existing Owners</h3>
<% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %><br>
<% end %>
<br>

<h3>New Owner</h3>
<br>
<label for="owner_name">Owner's Name: </label>
<input type="text" name="owner[name]" id="owner_name"></input>
<br><input type="submit" value="Create Pet"/>
</form>

